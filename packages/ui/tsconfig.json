{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",

    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "paths": {
      "@r/ui/*": ["./src/*"]
    },
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
